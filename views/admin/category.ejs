                </div>
            </div>
            <div class="col-12">
                <table class="table align-middle mb-0 bg-white">
                    <thead class="bg-light">
                      <tr>
                        <th>Category Name</th>
                        <th>Sold</th>
                        <th>Stock</th>
                        <th>Added</th>
                        <th>status</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>

                      <%categorydata? categorydata.map(category=>{
                        %>
                        <tr>
                          <td>
                            <div class="d-flex align-items-center">
                              <img
                                  src='/images/category/<%= category.image%>'
                                  alt=""
                                  style="width: 45px; height: 45px"
                                  class="rounded-circle"
                                  />
                              <div class="ms-3">
                                <p class="fw-bold mb-1"><%= category.category %></p>
                                <p class="text-muted mb-0">Every <%= category.category %> Products</p>
                              </div>
                            </div>
                          </td>
                          <td>
                              <p class="fw-bold mb-1">10</p>
                           
                          </td>
                          <td>
                            <span class=" ">2345</span>
                          </td>
                          <td><%= category.categoryAddDate %></td>
                          <td>
                            <% if(category.Availability){
                              %>
                              <span class=" badge rounded-pill text-bg-success ">
                                Availabile
                                </span>
                              <%
                            }else{
                              %>
                              <span class=" badge rounded-pill text-bg-danger ">
                                Un Availabile
                                </span>
                              <%
                            } %>
                          </td>
                         
                          
                        
                          <td>
                            <button type="button" class="btn btn-link btn-sm btn-rounded">
                              <i class="bi bi-pencil"></i>
                            </button>
                    <a href="/admin/deleteCategory/<%=category._id %>">
                    
                    delete
                      </a>
                            
                         
                          </td>
                        </tr>
                        <%
                      } ):""%>

                  
                     
                    </tbody>
                  </table>
