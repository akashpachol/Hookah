            <div>

<!-- Button trigger modal -->

  
  <!-- Modal -->
  <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="staticBackdropLabel">Add Category</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <!-- model form -->
        <form action="/admin/category"  method="post"  enctype="multipart/form-data">
        <div class="modal-body">
          <div class="mb-3">
            <label  class="form-label">Name of Category</label>
            <input type="text" class="form-control" name="addcategory" placeholder="Enter the category">
          </div>
          <div class="mb-3">
            <label  class="form-label">image of Category</label>
            <input type="file"  class="form-control" name="category_image" >
          </div>
          <div class="mb-3">
            <label  class="form-label">check Availability</label>
            <select class="form-select" name="Availability" >
              <option selected>check Availability</option>
              <option value="1">Availabile</option>
              <option value="0">not Availabile</option>
            
            </select>
          </div>


        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-close-white border" data-bs-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-success">save</button>
        </div>
      </form>
